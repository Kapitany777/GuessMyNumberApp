<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GuessMyNumberApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.GuessMyNumberApp" parent="Base.Theme.GuessMyNumberApp" />

    <style name="EditTextGuess">
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
    </style>

    <style name="ButtonGuess">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="TextViewInfo">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>